{
    "name": "patricksamson/phpunit-flaky-fix",
    "description": "A PHPUnit extension to help reproduce flaky tests.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "phpunit"
    ],
    "authors": [
        {
            "name": "Patrick Samson",
            "email": "samson@kirschbaumdevelopment.com"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0 || ~8.4.0",
        "phpunit/phpunit": "^10.0.0 || ^11.0.0 || ^12.0.0"
    },
    "require-dev": {
        "spatie/ray": "^1.42",
        "brianium/paratest": "^7.0",
        "pestphp/pest": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PatrickSamson\\PHPUnitFlakyFix\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
