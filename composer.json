{
    "name": "patricksamson/phpunit-flaky-fix",
    "description": "A PHPUnit extension to help reproduce flaky tests.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "php",
        "phpunit",
        "pest",
        "testing",
        "flaky",
        "reproduce",
        "test"
    ],
    "authors": [
        {
            "name": "Patrick Samson",
            "email": "patricksamson236@gmail.com"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0 || ~8.4.0",
        "phpunit/phpunit": "^10.0.0 || ^11.0.0 || ^12.0.0"
    },
    "require-dev": {
        "spatie/ray": "^1.42",
        "brianium/paratest": "^7.0",
        "laravel/pint": "^1.24",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "PatrickSamson\\PHPUnitFlakyFix\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "phpunit",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
