{
    "name": "patricksamson/phpunit-flaky-fix",
    "description": "A PHPUnit extension to help reproduce flaky tests.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "phpunit"
    ],
    "authors": [
        {
            "name": "Patrick Samson",
            "email": "samson@kirschbaumdevelopment.com"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0 || ~8.4.0"
    },
    "require-dev": {
        "spatie/ray": "^1.42",
        "pestphp/pest": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "PatrickSamson\\PHPUnitFlakyFix\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "pest": {
            "plugins": [
                "PatrickSamson\\PHPUnitFlakyFix\\Pest\\Plugin"
            ]
        }
    }
}
